extends ../layout/index

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center.text-action Bienes 
            span.font-normal.text-hoverAction Raices
        h2.text-center.text-2xl.font-extrabold= page

        .mt-8.mx-auto.max-w-lg
            .bg-formBackground.py-8.px-6.rounded-md.shadow-md
                form(action="/login" method="post").space-y-5
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div.mb-5
                        label.block.text-sm.uppercase.text-secondaryText.mb-2.font-bold Ingresa tu email:
                        input#email.w-full.px-4.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ingresa tu email" type="email" name="email" required)
                    div.mb-5
                        label.block.text-sm.uppercase.text-secondaryText.mb-2.font-bold Ingresa tu contraseña:
                        input#password.w-full.px-4.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ingresa tu contraseña" type="password" name="password" required)

                    input(class="w-full bg-action text-white hover:bg-hoverAction font-bold py-3 cursor-pointer" type="submit" value="Iniciar sesión")

                    .flex.items-center.justify-between
                        a.text-sm.text-secondaryText(href="/auth/register" class="hover:text-action") ¿No tienes una cuenta? Crea una
                        a.text-sm.text-secondaryText(href="/auth/passwordRecovery" class="hover:text-action") ¿Olvidaste tu contraseña? Recupérala